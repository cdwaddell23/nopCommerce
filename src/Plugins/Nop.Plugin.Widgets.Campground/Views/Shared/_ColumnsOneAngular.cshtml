@{
    Layout = "~/Themes/NopElectro/Views/Shared/_Root.cshtml";
    Html.AddCssFileParts(ResourceLocation.Head, "//code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css", excludeFromBundle: true);

    Html.AddScriptParts(ResourceLocation.Footer, "~/CampTaleApp/runtime.js", excludeFromBundle: true);
    Html.AddScriptParts(ResourceLocation.Footer, "~/CampTaleApp/polyfills.js", excludeFromBundle: true);
    Html.AddScriptParts(ResourceLocation.Footer, "~/CampTaleApp/styles.js", excludeFromBundle: true);
    Html.AddScriptParts(ResourceLocation.Footer, "~/CampTaleApp/vendor.js", excludeFromBundle: true);
    Html.AddScriptParts(ResourceLocation.Footer, "~/CampTaleApp/main.js", excludeFromBundle: true);

}
@if (IsSectionDefined("Breadcrumb"))
{
    @section Breadcrumb {
        @RenderSection("Breadcrumb")
    }
}

<div class="center-1">
    @await Component.InvokeAsync("Widget", new { widgetZone = "main_column_before" })
    @RenderBody()
    @await Component.InvokeAsync("Widget", new { widgetZone = "main_column_after" })
</div>
<div class="modal fade  modal-lg" id="addCampgroundReviewModal" style="background-color: transparent;">
    <div class="modal-content" style="width:100%; height:100%">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Review Campground</h4>
        </div>
        <div class="modal-body">
            <app-root>Loading...</app-root>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>
<script type="text/javascript" asp-location="Footer">
    function addReview(campgroundId, showModal = true) {
        if ($('#addCampgroundReviewModal').length && showModal) {
            $('#addCampgroundReviewModal').modal('show');
        }
        else {
            document.getElementById('addCampgroundReviews-' + campgroundId).style.display = "block";
        }
        //window.dispatchEvent(new CustomEvent('campgroundId', { detail: campgroundId }));
        //$(".btnAddReview").hide();
    }
    $(document).on('show.bs.modal', '.modal', function () {
        $(this).appendTo('body');
    });
</script>

