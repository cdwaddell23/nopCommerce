@model CampgroundReviewAdminModel

@{
    //page title
    ViewBag.Title = T("Admin.CampgroundReviews.EditCampgroundReviewDetails").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Campground reviews");
}

<form asp-controller="CampgroundReview" asp-action="Edit" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.CampgroundReviews.EditCampgroundReviewDetails")
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.CampgroundReviews.BackToList")</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            @if (!Model.IsLoggedInAsHost)
            {
                //this button is not visible to hosts
                <span id="campgroundreview-delete" class="btn bg-red">
                    <i class="fa fa-trash-o"></i>
                    @T("Admin.Common.Delete")
                </span>
            }
            @await Component.InvokeAsync("AdminWidget", new { widgetZone = "admin_campground_review_details_buttons", additionalData = Model.Id })
        </div>
    </div>
    @await Html.PartialAsync("~/Plugins/Campgrounds/Views/Admin/CampgroundReview/_CreateOrUpdate.cshtml", Model)
</form>
@if (!Model.IsLoggedInAsHost)
{
    //this button is not visible to hosts
    <nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="campgroundreview-delete" />
}
