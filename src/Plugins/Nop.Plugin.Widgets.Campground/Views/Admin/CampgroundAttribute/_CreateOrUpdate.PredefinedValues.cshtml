@model CampgroundAttributeTypeModel

<div class="panel-group">
    @await Component.InvokeAsync("AdminWidget", new { widgetZone = "admin_campground_attribute_details_predefined_values_top", additionalData = Model.Id })
    <div class="panel panel-default">
        @if (Model.Id > 0)
        {
            <div class="panel-body">
                <p>
                    @T("Admin.Catalog.Attributes.CampgroundAttributes.PredefinedValues.Hint")
                </p>
                <div id="campgroundattributevalues-grid"></div>

                <script type="text/javascript">
                    $(document).ready(function() {
                        $("#campgroundattributevalues-grid").kendoGrid({
                            dataSource: {
                                type: "json",
                                transport: {
                                    read: {
                                        url: "@Html.Raw(Url.Action("PredefinedCampgroundAttributeValueList", "CampgroundAttribute", new {campgroundAttributeTypeId = Model.Id}))",
                                        type: "POST",
                                        dataType: "json",
                                        data: addAntiForgeryToken
                                    },
                                    destroy: {
                                        url: "@Html.Raw(Url.Action("PredefinedCampgroundAttributeValueDelete", "CampgroundAttribute"))",
                                        type: "POST",
                                        dataType: "json",
                                        data: addAntiForgeryToken
                                    }
                                },
                                schema: {
                                    data: "Data",
                                    total: "Total",
                                    errors: "Errors",
                                    model: {
                                        id: "Id",
                                        fields: {
                                            Campground2Name: { editable: false, type: "string" },
                                            CampgroundId2: { editable: false, type: "number" }
                                        }
                                    }
                                },
                                error: function(e) {
                                    display_kendoui_grid_error(e);
                                    // Cancel the changes
                                    this.cancelChanges();
                                },
                                serverPaging: true,
                                serverFiltering: true,
                                serverSorting: true
                            },
                            pageable: {
                                refresh: true,
                                numeric: false,
                                previousNext: false,
                                info: false,
                                @await Html.PartialAsync("_GridPagerMessages")
                            },
                            editable: {
                                confirmation: "@T("Admin.Common.DeleteConfirmation")",
                                mode: "inline"
                            },
                            scrollable: false,
                            columns: [
                                {
                                    field: "Name",
                                    title: "@T("Admin.Catalog.Attributes.CampgroundAttributes.PredefinedValues.Fields.Name")",
                                    width: 200
                                }, {
                                    field: "IsPreSelected",
                                    title: "@T("Admin.Catalog.Attributes.CampgroundAttributes.PredefinedValues.Fields.IsPreSelected")",
                                    width: 100,
                                    headerAttributes: { style: "text-align:center" },
                                    attributes: { style: "text-align:center" },
                                    template: '# if(IsPreSelected) {# <i class="fa fa-check true-icon"></i> #} else {# <i class="fa fa-close false-icon"></i> #} #'
                                }, {
                                    field: "DisplayOrder",
                                    title: "@T("Admin.Catalog.Attributes.CampgroundAttributes.PredefinedValues.Fields.DisplayOrder")",
                                    width: 100
                                }, {
                                    field: "Id",
                                    title: "@T("Admin.Common.Edit")",
                                    width: 100,
                                    headerAttributes: { style: "text-align:center" },
                                    attributes: { style: "text-align:center" },
                                    template: "<button onclick=\"javascript:OpenWindow('@Url.Content("~/Admin/CampgroundAttribute/PredefinedCampgroundAttributeValueEditPopup/")#=Id#?btnId=btnRefresh&formId=campgroundattribute-form', 800, 550, true); return false;\" class='btn btn-default'><i class=\"fa fa-pencil\"></i>@T("Admin.Common.Edit")</button>"
                                }, {
                                    command: { name: "destroy", text: "@T("Admin.Common.Delete")" },
                                    title: "@T("Admin.Common.Delete")",
                                    width: 200
                                }
                            ]
                        });
                    });
                </script>
            </div>
            <div class="panel-footer">
                <button type="submit" id="btnAddNewValue" onclick="javascript:OpenWindow('@(Url.Action("PredefinedCampgroundAttributeValueCreatePopup", "CampgroundAttributes", new {campgroundAttributeTypeId = Model.Id, btnId = "btnRefresh", formId = "campgroundattribute-form"}))', 800, 550, true); return false;" class="btn btn-primary">
                    @T("Admin.Catalog.Attributes.CampgroundAttributes.PredefinedValues.AddNew")
                </button>
                <input type="submit" id="btnRefresh" style="display:none" />
                <script type="text/javascript">
                    $(document).ready(function() {
                        $('#btnRefresh').click(function() {
                            //refresh grid
                            var grid = $("#campgroundattributevalues-grid").data('kendoGrid');
                            grid.dataSource.read();

                            //return false to don't reload a page
                            return false;
                        });
                    });
                </script>
            </div>
        }
        else
        {
            <div class="panel-body">
                @T("Admin.Catalog.Attributes.CampgroundAttributes.PredefinedValues.SaveBeforeEdit")
            </div>
        }
    </div>
    @await Component.InvokeAsync("AdminWidget", new { widgetZone = "admin_campground_attribute_details_predefined_values_bottom", additionalData = Model.Id })
</div>