@model CampgroundModel.CampgroundAttributeValueModel

@using Nop.Plugin.Campgrounds.Data.Domain
@using Nop.Services

@{
    Html.AddScriptParts("~/lib/farbtastic/farbtastic.js");
    Html.AddCssFileParts("~/lib/farbtastic/farbtastic.css");
}

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />
<input asp-for="CampgroundAttributeMappingId" type="hidden" />
<input asp-for="DisplayColorSquaresRgb" type="hidden" />
<input asp-for="DisplayImageSquaresPicture" type="hidden" />

@if (ViewBag.RefreshPage == true)
{
    <script type="text/javascript">
        try {window.opener.document.forms['@(Context.Request.Query["formId"])'].@(Context.Request.Query["btnId"]).click();}
        catch (e){}
        window.close();
    </script>
}

<script type="text/javascript">
    $(document).ready(function() {
        $("#@Html.IdFor(model => model.AttributeValueTypeId)").change(toggleCampgroundType);
        $("#@Html.IdFor(model => model.CustomerEntersQty)").change(toggleCustomerEntersQty);
        toggleCampgroundType();
    });

    function toggleCampgroundType() {
        var selectedCampgroundTypeId = $("#@Html.IdFor(model => model.AttributeValueTypeId)").val();
        if (selectedCampgroundTypeId == @(((int) CampgroundAttributeValueType.Campground).ToString())) {
            $('#group-associated-campground').hide();
        $('#group-customer-enters-qty').hide();
        $('#group-quantity').hide();
        $('#group-price-adjustment').show();
        $('#group-weight-adjustment').show();
        $('#group-cost').show();
    } else if (selectedCampgroundTypeId == @(((int) CampgroundAttributeValueType.AssociatedToCampground).ToString())) {
        $('#group-associated-campground').show();
        $('#group-customer-enters-qty').show();
        $('#group-price-adjustment').hide();
        $('#group-weight-adjustment').hide();
        $('#group-cost').hide();
        toggleCustomerEntersQty();
    }
    };

    function toggleCustomerEntersQty() {
        if ($("#@Html.IdFor(model => model.CustomerEntersQty)").is(':checked')) {
            $('#group-quantity').hide();
        }
        else {
            $('#group-quantity').show();
        }
    }
</script>

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            @await Component.InvokeAsync("AdminWidget", new { widgetZone = "admin_campground_attribute_value_details_top", additionalData = Model.Id })
            <div class="panel panel-default panel-popup panel-popup">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-sm-3">
                            <nop-label asp-for="AttributeValueTypeId" />
                        </div>
                        <div class="col-sm-9">
                            <nop-select asp-for="AttributeValueTypeId" asp-items="@(((CampgroundAttributeValueType)Model.AttributeValueTypeId).ToSelectList())" />
                            <span asp-validation-for="AttributeValueTypeId"></span>
                        </div>
                    </div>
                    <div class="form-group" id="group-associated-campground">
                        <div class="col-sm-3">
                            <nop-label asp-for="AssociatedCampgroundId" />
                        </div>
                        <div class="col-sm-9">
                            <input asp-for="AssociatedCampgroundId" type="hidden" />
                            <span id="associate-campground-name">@Model.AssociatedCampgroundName</span>
                            <span asp-validation-for="AssociatedCampgroundId"></span>
                            <button type="submit" onclick="javascript:OpenWindow('@(Url.Action("AssociateCampgroundToAttributeValuePopup", "Campground", new {campgroundIdInput = Html.IdFor(model => model.AssociatedCampgroundId), campgroundNameInput = "associate-campground-name"}))', 800, 850, true); return false;" class="btn btn-primary">
                                @T("Admin.Campgrounds.CampgroundAttributes.Attributes.Values.Fields.AssociatedCampground.AddNew")
                            </button>
                            <script type="text/javascript">
                                $(document).ready(function () {
                                    if (@Model.AssociatedCampgroundId > 0) {
                                        warningValidation('@Url.Action("AssociatedCampgroundGetWarnings", "Campground")', '@Html.NameFor(model => model.AssociatedCampgroundId)', { campgroundId: '@Model.AssociatedCampgroundId' });
                                    }
                                    
                                    $('#@Html.IdFor(model => model.AssociatedCampgroundId)').on('change', function () {
                                        warningValidation('@Url.Action("AssociatedCampgroundGetWarnings", "Campground")', '@Html.NameFor(model => model.AssociatedCampgroundId)', { campgroundId: $(this).val() });
                                    });
                                });
                            </script>
                        </div>
                    </div>
                    <div class="form-group" id="group-customer-enters-qty">
                        <div class="col-sm-3">
                            <nop-label asp-for="CustomerEntersQty" />
                        </div>
                        <div class="col-sm-9">
                            <nop-editor asp-for="CustomerEntersQty" />
                            <span asp-validation-for="CustomerEntersQty"></span>
                        </div>
                    </div>
                    <div class="form-group" id="group-quantity">
                        <div class="col-sm-3">
                            <nop-label asp-for="Quantity" />
                        </div>
                        <div class="col-sm-9">
                            <nop-editor asp-for="Quantity" />
                            <span asp-validation-for="Quantity"></span>
                        </div>
                    </div>

                    @(Html.LocalizedEditor<CampgroundModel.CampgroundAttributeValueModel, CampgroundModel.CampgroundAttributeValueLocalizedModel>("campgroundattributevalue-localized",
                    @<div>
                        <div class="form-group">
                            <div class="col-sm-3">
                                <nop-label asp-for="@Model.Locales[item].Name" />
                            </div>
                            <div class="col-sm-9">
                                <nop-editor asp-for="@Model.Locales[item].Name" />
                                <span asp-validation-for="@Model.Locales[item].Name"></span>
                            </div>
                        </div>
                         <input type="hidden" asp-for="@Model.Locales[item].LanguageId" />
                    </div>
    ,
                    @<div>
                        <div class="form-group">
                            <div class="col-sm-3">
                                <nop-label asp-for="Name" />
                            </div>
                            <div class="col-sm-9">
                                <nop-editor asp-for="Name" asp-required="true" />
                                <span asp-validation-for="Name"></span>
                            </div>
                        </div>
                    </div>
    ))
                    @if (Model.DisplayColorSquaresRgb)
                    {
                        //ensure "ColorSquaresRgb" has some default value. Otherwise farbtastic won't set a selected value
                        if (string.IsNullOrEmpty(Model.ColorSquaresRgb))
                        {
                            Model.ColorSquaresRgb = "#000000";
                        }
                        <div class="form-group">
                            <div class="col-sm-3">
                                <nop-label asp-for="ColorSquaresRgb" />
                            </div>
                            <div class="col-sm-9">
                                <nop-editor asp-for="ColorSquaresRgb" />
                                <div id="color-picker"></div>
                                <script type="text/javascript">
                                    $(document).ready(function(){
                                        $('#color-picker').farbtastic('#@Html.IdFor(model => model.ColorSquaresRgb)');
                                    });
                                </script>
                                <span asp-validation-for="ColorSquaresRgb"></span>
                            </div>
                        </div>
                    }
                    @if (Model.DisplayImageSquaresPicture)
                    {
                        <div class="form-group">
                            <div class="col-sm-3">
                                <nop-label asp-for="ImageSquaresPictureId" />
                            </div>
                            <div class="col-sm-9">
                                <nop-editor asp-for="ImageSquaresPictureId" />
                                <span asp-validation-for="ImageSquaresPictureId"></span>
                            </div>
                        </div>
                    }
                    <div class="form-group" id="group-price-adjustment">
                        <div class="col-sm-3">
                            <nop-label asp-for="PriceAdjustment" />
                        </div>
                        <div class="col-sm-9">
                            <nop-editor asp-for="PriceAdjustment" />
                            <span asp-validation-for="PriceAdjustment"></span>
                        </div>
                    </div>
                    <div class="form-group" id="group-weight-adjustment">
                        <div class="col-sm-3">
                            <nop-label asp-for="WeightAdjustment" />
                        </div>
                        <div class="col-sm-9">
                            <nop-editor asp-for="WeightAdjustment" />
                            <span asp-validation-for="WeightAdjustment"></span>
                        </div>
                    </div>
                    <div class="form-group" id="group-cost">
                        <div class="col-sm-3">
                            <nop-label asp-for="Cost" />
                        </div>
                        <div class="col-sm-9">
                            <nop-editor asp-for="Cost" />
                            <span asp-validation-for="Cost"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3">
                            <nop-label asp-for="IsPreSelected" />
                        </div>
                        <div class="col-sm-9">
                            <nop-editor asp-for="IsPreSelected" />
                            <span asp-validation-for="IsPreSelected"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3">
                            <nop-label asp-for="DisplayOrder" />
                        </div>
                        <div class="col-sm-9">
                            <nop-editor asp-for="DisplayOrder" />
                            <span asp-validation-for="DisplayOrder"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3">
                            <nop-label asp-for="PictureId" />
                        </div>
                        <div class="col-sm-9">
                            <div class="attribute-picture-selection-block clearfix">
                                <div class="checkbox">
                                    <label>
                                        <input type="radio" name="@Html.NameFor(x => x.PictureId)" value="0" id="id_image_0"
                                               @if (Model.PictureId == 0)
                                               {
                                                   <text> checked="checked" </text>
                                               }>
                                        @T("Admin.Campgrounds.CampgroundAttributes.Attributes.Values.Fields.Picture.NoPicture")
                                    </label>
                                </div>
                                @foreach (var picture in Model.CampgroundPictureModels)
                                {
                                    <div class="checkbox">
                                        <label>
                                            <input type="radio" name="@Html.NameFor(x => x.PictureId)" value="@picture.PictureId" id="id_image_@picture.PictureId"
                                                   @if (picture.PictureId == Model.PictureId) { <text> checked="checked" </text>  }>
                                            <img src="@picture.PictureUrl" alt="" title="" width="75">
                                        </label>
                                    </div>
                                }
                            </div>
                            <span asp-validation-for="PictureId"></span>
                        </div>
                    </div>
                </div>
            </div>
            @await Component.InvokeAsync("AdminWidget", new { widgetZone = "admin_campground_attribute_value_details_bottom", additionalData = Model.Id })
        </div>
    </div>
</div>