@model CampgroundModel.CampgroundAttributeValueModel.AssociateCampgroundToAttributeValueModel
@inject Nop.Core.Domain.Common.AdminAreaSettings adminAreaSettings

@{
    Layout = "_AdminPopupLayout";

    var popupGridPageSize = adminAreaSettings.PopupGridPageSize;

    //page title
    ViewBag.Title = T("Admin.Campgrounds.CampgroundAttributes.Attributes.Values.Fields.AssociatedCampground.AddNew").Text;
}

@if (ViewBag.RefreshPage == true)
{
    <script type="text/javascript">
        try {
            window.opener.$('#@(Context.Request.Query["campgroundIdInput"])').val('@(ViewBag.campgroundId)').trigger('change');
            window.opener.document.getElementById('@(Context.Request.Query["campgroundNameInput"])').innerHTML = '@(ViewBag.campgroundName)';
        }
        catch (e){}
        window.close();
    </script>
}

<form asp-controller="Campground" asp-action="AssociateCampgroundToAttributeValuePopup"
      asp-route-campgroundIdInput="@Context.Request.Query["campgroundIdInput"]"
      asp-route-campgroundNameInput="@Context.Request.Query["campgroundNameInput"]">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Campgrounds.CampgroundAttributes.Attributes.Values.Fields.AssociatedCampground.AddNew")
        </h1>
        <div class="pull-right">
            &nbsp;
        </div>
    </div>

    <div class="content">
        <input asp-for="AssociatedToCampgroundId" type="hidden" />
        <div class="form-horizontal">
            <div class="panel-group">
                <div class="panel panel-default panel-search panel-popup">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="col-sm-5">
                                        <nop-label asp-for="SearchCampgroundName" />
                                    </div>
                                    <div class="col-sm-7">
                                        <nop-editor asp-for="SearchCampgroundName" />
                                    </div>
                                </div>
                                <div class="form-group" @(Model.AvailableCategories.SelectionIsNotPossible() ? Html.Raw("style=\"display:none\"") : null)>
                                    <div class="col-sm-5">
                                        <nop-label asp-for="SearchCategoryId" />
                                    </div>
                                    <div class="col-sm-7">
                                        <nop-select asp-for="SearchCategoryId" asp-items="Model.AvailableCategories" />
                                    </div>
                                </div>
                                <div class="form-group" @(Model.AvailableCampgroundHosts.SelectionIsNotPossible() || Model.IsLoggedInAsCampgroundHost ? Html.Raw("style='display: none;'") : null)>
                                    <div class="col-sm-5">
                                        <nop-label asp-for="SearchCampgroundHostId" />
                                    </div>
                                    <div class="col-sm-7">
                                        <nop-select asp-for="SearchCampgroundHostId" asp-items="Model.AvailableCampgroundHosts" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="col-sm-5">
                                        <nop-label asp-for="SearchCampgroundTypeId" />
                                    </div>
                                    <div class="col-sm-7">
                                        <nop-select asp-for="SearchCampgroundTypeId" asp-items="Model.AvailableCampgroundTypes" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <button type="button" id="search-campgrounds" class="btn btn-primary btn-search">
                                    <i class="fa fa-search"></i>
                                    @T("Admin.Common.Search")
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="panel-body">
                        <div id="campgrounds-grid"></div>

                        <script type="text/javascript">
                            $(document).ready(function () {
                                $("#campgrounds-grid").kendoGrid({
                                    dataSource: {
                                        type: "json",
                                        transport: {
                                            read: {
                                                url: "@Html.Raw(Url.Action("AssociateCampgroundToAttributeValuePopupList", "Campground"))",
                                                type: "POST",
                                                dataType: "json",
                                                data: additionalData
                                            }
                                        },
                                        schema: {
                                            data: "Data",
                                            total: "Total",
                                            errors: "Errors"
                                        },
                                        error: function(e) {
                                            display_kendoui_grid_error(e);
                                            // Cancel the changes
                                            this.cancelChanges();
                                        },
                                        pageSize: @(popupGridPageSize),
                                        serverPaging: true,
                                        serverFiltering: true,
                                        serverSorting: true
                                    },
                                    pageable: {
                                        refresh: true,
                                        @await Html.PartialAsync("_GridPagerMessages")
                                    },
                                    editable: {
                                        confirmation: "@T("Admin.Common.DeleteConfirmation")",
                                        mode: "inline"
                                    },
                                    scrollable: false,
                                    columns: [{
                                        field: "Name",
                                        title: "@T("Admin.Common.Select")",
                                        width: 50,
                                        template: '<button type="button" onclick="selectAssociatedCampground(#=Id#)" class="btn btn-default">@T("Admin.Common.Select")</button>'
                                    },{
                                        field: "Name",
                                        title: "@T("Admin.Campgrounds.Fields.Name")"
                                    }, {
                                        field: "Published",
                                        title: "@T("Admin.Campgrounds.Fields.Published")",
                                        width: 100,
                                        headerAttributes: { style: "text-align:center" },
                                        attributes: { style: "text-align:center" },
                                        template: '# if(Published) {# <i class="fa fa-check true-icon"></i> #} else {# <i class="fa fa-close false-icon"></i> #} #'
                                    }]
                                });
                            });
                        </script>
                    </div>
                    <div class="panel-footer" style="display: none">
                        <button type="submit" id="save" name="save" class="btn btn-primary">
                            @T("Admin.Common.Save")
                        </button>
                    </div>

                    <script type="text/javascript">
                        $(document).ready(function () {
                            $('#search-campgrounds').click(function () {
                                var grid = $('#campgrounds-grid').data('kendoGrid');
                                grid.dataSource.page(1); //new search. Set page size to 1
                                //grid.dataSource.read(); we already loaded the grid above using "page" function
                                return false;
                            });
                        });

                        $("#@Html.IdFor(model => model.SearchCampgroundName)").keydown(function (event) {
                            if (event.keyCode == 13) {
                                $("#search-campgrounds").click();
                                return false;
                            }
                        });

                        function additionalData() {
                            var data = {
                                SearchCampgroundName: $('#@Html.IdFor(model => model.SearchCampgroundName)').val(),
                                SearchCategoryId: $('#SearchCategoryId').val(),
                                SearchManufacturerId: $('#SearchManufacturerId').val(),
                                SearchStoreId: $('#SearchStoreId').val(),
                                SearchCampgroundHostId: $('#SearchCampgroundHostId').val(),
                                SearchCampgroundTypeId: $('#SearchCampgroundTypeId').val()
                            };
                            addAntiForgeryToken(data);
                            return data;
                        }

                        function selectAssociatedCampground(campgroundid) {
                            $("#@Html.IdFor(model => model.AssociatedToCampgroundId)").val(campgroundid);
                            $('#save').click();
                        }
                    </script>
                </div>
            </div>
        </div>
    </div>
</form>