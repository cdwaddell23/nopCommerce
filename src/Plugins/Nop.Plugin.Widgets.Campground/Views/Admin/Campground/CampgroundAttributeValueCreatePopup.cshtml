@model CampgroundModel.CampgroundAttributeValueModel

@{
    Layout = "_AdminPopupLayout";

    //page title
    ViewBag.Title = T("Admin.Campgrounds.CampgroundAttributes.Attributes.Values.AddNew").Text;
}
<form asp-controller="Campground" asp-action="CampgroundAttributeValueCreatePopup"
      asp-route-campgroundAttributeTypeMappingId="@Context.Request.Query["campgroundAttributeTypeMappingId"]"
      asp-route-btnId="@Context.Request.Query["btnId"]"
      asp-route-formId="@Context.Request.Query["formId"]">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Campgrounds.CampgroundAttributes.Attributes.Values.AddNew")
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            @await Component.InvokeAsync("AdminWidget", new { widgetZone = "admin_campground_attribute_value_details_buttons" })
        </div>
    </div>
    @await Html.PartialAsync("~/Plugins/Campgrounds/Views/Admin/Campground/_CreateOrUpdateCampgroundAttributeValue.cshtml", Model)
</form>