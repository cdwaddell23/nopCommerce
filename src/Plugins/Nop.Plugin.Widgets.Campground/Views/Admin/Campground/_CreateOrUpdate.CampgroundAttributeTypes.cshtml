@model CampgroundModel

<div class="panel-group">
    <p>
        @T("Admin.Campgrounds.CampgroundAttributes.Hint")
    </p>
    @await Component.InvokeAsync("AdminWidget", new { widgetZone = "admin_campground_details_campground_attributes_top", additionalData = Model.Id })
    @if (Model.Id > 0)
    {
        if (Model.CampgroundAttributeTypesExist)
        {
            <nop-tabs id="campgroundattribute-edit" asp-tab-name-to-select="tab-attributes" asp-render-selected-tab-input="false">
                <nop-tab asp-name="tab-attributes" asp-title="@T("Admin.Campgrounds.CampgroundAttributes.Attributes")" asp-default="true">@await Html.PartialAsync("~/Plugins/Campgrounds/Views/Admin/Campground/_CreateOrUpdate.CampgroundAttributeTypes.Info.cshtml", Model)</nop-tab>
            </nop-tabs>
        }
        else
        {
            <div class="panel panel-default">
                <div class="panel-body">
                    @T("Admin.Campgrounds.CampgroundAttributes.NoAttributesAvailable")
                </div>
            </div>
        }
    }
    else
    {
        <div class="panel panel-default">
            <div class="panel-body">
                @T("Admin.Campgrounds.CampgroundAttributes.SaveBeforeEdit")
            </div>
        </div>
    }
    @await Component.InvokeAsync("AdminWidget", new { widgetZone = "admin_campground_details_campground_attributes_bottom", additionalData = Model.Id })
</div>